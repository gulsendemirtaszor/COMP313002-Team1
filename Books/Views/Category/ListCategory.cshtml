@model SearchListViewModel

@{
    Layout = "_LayoutPage";
}

<h3 style="margin-top:30px;color:#1F618D"><i class="fa fa-list"></i>&nbsp;@ViewBag.Title</h3>
<hr />

@if (TempData["loadMessage"] != null)
{
    <div class="alert alert-success text-center">
        <i class="fa fa-check-circle"></i>&nbsp;@TempData["loadMessage"]
    </div>
}

<a asp-action="AddCategory" asp-controller="Category" class="btn btn-primary float-right" style="margin-bottom:20px">
    <i class="fa fa-plus"></i>&nbsp;Add Category
</a>

<table class="table table-bordered">
    <thead>
        <tr class="table-primary" style="text-align:center">
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Geographic Areas</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model.categoriesListViewModel.Categories)
        {
            <tr>
                <td>
                    <a asp-action="ViewCategory" asp-route-id="@r.Id">@r.Name</a>
                </td>
                <td>@r.Description</td>
                <td>&nbsp;</td>
                <td>
                    <center>
                        <a asp-action="EditCategory" asp-route-id="@r.Id">
                            <i class="fa fa-edit"></i>&nbsp;Edit
                        </a>
                        &nbsp;
                        <a asp-action="DeleteCategory" asp-route-id="@r.Id">
                            <i class="fa fa-ban"></i>&nbsp;Delete
                        </a>
                    </center>
                </td>
            </tr>
        }
    </tbody>
</table>

