@model SearchListViewModel

@{
    Layout = "_LayoutPage";
}

<h3 style="margin-top:30px;color:#1F618D">
    <i class="fa fa-user-edit"></i>&nbsp;@ViewBag.Title
</h3>
<hr />

@if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
{
    <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <b>NOTE:</b>&nbsp;@Html.ValidationSummary(true)
    </div>
}

<form asp-action="EditUser" method="post">
    @*<div asp-validation-summary="All" class="text-danger"></div>*@
    <input type="hidden" asp-for="@Model.appUser.UserName" value="@Model.appUser.UserName" />

    @await Html.PartialAsync("UserInfo", Model)

    <hr />
    <center>
        <button type="submit" class="btn btn-primary w-25">
            <i class="fa fa-save"></i>&nbsp;Update
        </button>
        <a asp-action="index" asp-controller="Book" class="btn btn-secondary w-25">
            <i class="fa fa-ban"></i>&nbsp;Cancel
        </a>
    </center>
</form>
