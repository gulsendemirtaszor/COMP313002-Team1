@model SearchListViewModel

@{
    Layout = "_LayoutPage";
}

<h3 style="margin-top:30px;color:#1F618D"><i class="fa fa-list"></i>&nbsp;@ViewBag.Title</h3>
<hr />

@if (TempData["loadMessage"] != null)
{
    <div class="alert alert-success text-center">
        <i class="fa fa-check-circle"></i>&nbsp;@TempData["loadMessage"]
    </div>
}

<a asp-action="AddCondition" asp-controller="Condition" class="btn btn-primary float-right" style="margin-bottom:20px">
    <i class="fa fa-plus"></i>&nbsp;Add Condition
</a>

<table class="table table-bordered" style="margin-bottom:80px">
    <thead>
        <tr class="table-primary" style="text-align:center">
            <th scope="col">Description</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model.conditionsListViewModel.Conditions)
        {
        <tr>
            <td>
                <a asp-action="ViewCondition" asp-route-id="@r.Id">@r.Description</a>
            </td>
            <td>
                <center>
                    <a asp-action="EditCondition" asp-route-id="@r.Id">
                        <i class="fa fa-edit"></i>&nbsp;Edit
                    </a>
                    &nbsp;
                    <a asp-action="DeleteCondition" asp-route-id="@r.Id">
                        <i class="fa fa-ban"></i>&nbsp;Delete
                    </a>
                </center>
            </td>
        </tr>
        }
    </tbody>
</table>
