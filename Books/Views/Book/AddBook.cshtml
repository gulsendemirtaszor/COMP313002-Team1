@model SearchListViewModel
@{
    Layout = "_LayoutPage";
}

<h3 style="margin-top:30px;color:#1F618D">
    <i class="fa fa-plus"></i>&nbsp;@ViewBag.Title
</h3>
<hr />

@if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
{
    <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <b>NOTE:</b>&nbsp;@Html.ValidationSummary(true)
    </div>
}

<form asp-action="AddBook" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="@Model.bookInfoListViewModel.book.Id" value="0" />
    <input type="hidden" asp-for="@Model.bookInfoListViewModel.Categories" />

    @await Html.PartialAsync("AddBookInfo")
    @await Html.PartialAsync("BookImage", new Books.Models.BookImage())

    @*<input class="btn btn-primary" type="submit" value="Save" />
        <input class="btn btn-secondary" value="Cancel" asp-action="Home" onclick="window.location = '@Url.Action("Index", "")'" />*@

    <hr />
    <center>
        <button type="submit" class="btn btn-primary w-25">
            <i class="fa fa-save"></i>&nbsp;Save
        </button>
        <a asp-action="index" asp-controller="Book" class="btn btn-secondary w-25">
            <i class="fa fa-ban"></i>&nbsp;Cancel
        </a>
    </center>
</form>

