@model SearchListViewModel

@{
    Layout = "_LayoutPage";
}

<h3 style="margin-top:30px;color:#1F618D">
    <i class="fa fa-edit"></i>&nbsp;@ViewBag.Title
</h3>
<hr />

@if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
{
    <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <b>NOTE:</b>&nbsp;@Html.ValidationSummary(true)
    </div>
}

<form asp-action="EditBook" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="@Model.bookInfoListViewModel.book.Id" />

    @await Html.PartialAsync("AddBookInfo")
    @await Html.PartialAsync("BookImageEdit", Model.bookInfoListViewModel.MyBookImages)

    @*<input class="btn btn-primary" type="submit" value="Update" />
        <input class="btn btn-secondary" value="Cancel" onclick="window.location = '@Url.Action("Index", "Home")'" />*@

    <hr />
    <center style="margin-bottom:80px">
        <button type="submit" class="btn btn-primary w-25">
            <i class="fa fa-save"></i>&nbsp;Update
        </button>
        <a asp-action="index" asp-controller="Book" class="btn btn-secondary w-25">
            <i class="fa fa-ban"></i>&nbsp;Cancel
        </a>
    </center>
</form>

